{{! After form submission }}
{{# if req.body.submitted}}
  <h2>You entered:</h2>
  Quote Text: {{req.body.quote}}<br>
  <h2>Thanks for submitting! Submit again?</h2>
{{/if}}

{{! Form }}
<div class="container">
  <div class="row">
    <h1 class="center pink-text text-lighten-2">{{title}}</h1>
    <br>
    <form class="col s10 offset-s2" action="/add_quote" method="POST">
      <div class="input-field col s10">
        <input type="hidden" name="submitted" value=true>

        <label>Quote Text<br><em>(do not enclose in quotation marks):</em></label><br>
        <textarea class="materialize-textarea" rows="4" cols="50" name="quote"></textarea>
        <br><br>
      </div>
      <div class="input-field col s10">
        <label>Author</label><br>
        {{#each author}}
        <input id="{{this.id}}" type="radio" name="authorId" value={{this.id}}>
        <label for="{{this.id}}">{{this.name}}</label><br>
        {{/each}}
        <input type="text" name="newAuthor" placeholder="New Author">
        <br><br>
      </div>
      <div class="input-field col s10">
        <label>Categories</label><br>
        {{#each category}}
        <input id="c{{this.id}}" type="checkbox" name="category" value={{this.id}}>
        <label for="c{{this.id}}">{{this.name}}</label><br>
        {{/each}}
        <br>
        New Category:
        <input type="text" name="newCategory">
        <br><br>
      </div>
      <div class="input-field col s10 center">
        <button class="btn btn-primary" type="submit">Submit</button>
        <br /><br />
        <a href="/">Nevermind, take me home</a>
      </div>
  </form>
  </div>
</div>
